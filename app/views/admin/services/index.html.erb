<table class="table table-striped">
  <thead>
    <tr>
        <th colspan="4" style="text-align: right;">
            <%= link_to "Agg Servicio", new_admin_service_path, data: {bs_toggle: "modal", bs_target: "#newModal", remote: true}, class: "btn btn-primary"%>
        </th>
    </tr>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody id="servicesTable">
    <% @services.each do |service|%>
        <%= render 'service_row', service: service %>
    <% end %>
  </tbody>
</table>

<!-- Modal New -->
<div class="modal fade" id="newModal" tabindex="-1" aria-labelledby="newModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newModalLabel">Agg Servicio</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="newUserForm">
        
      </div>
    </div>
  </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Servicio</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="editUserForm">
        
      </div>
    </div>
  </div>
</div>

