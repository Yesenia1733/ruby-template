<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="page-content page-container" id="page-content">
  <div class="padding">
      <div class="row container d-flex justify-content-center">
          <div class="col-lg-5 grid-margin stretch-card">
            <!--form mask starts-->
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Registrate</h4>
                 <form class="forms-sample">
                  
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :Nombre %><br />
                      <%= f.email_field :first_name, autofocus: true, autocomplete: "nombre" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :Apellido %><br />
                      <%= f.email_field :last_name, autofocus: true, autocomplete: "apellido" %>
                    </div>          
                   </div>
                   <div class="form-group">
                    <div class="field">
                      <%= f.label :Direccion %><br />
                      <%= f.email_field :address, autofocus: true, autocomplete: "direccion" %>
                    </div>
                    </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :Telefono %><br />
                        <%= f.email_field :phone, autofocus: true, autocomplete: "telefono" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                      </div>
                    </div>   
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :password %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password" %>
                      </div>
                     </div>
                     <div class="form-group">
                      <div class="field">
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                      </div>
                     </div>
                    <br>
                    <div class="actions">
                      <%= f.submit "Registrarse", class: "btn btn-outline-body-color" %>
                    </div>
                    <br>
                    <%= render "devise/shared/links" %>
                    </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <!--form mask ends-->
          </div>
          </div>
        </div>
            <!--form mask ends-->
         </div>
         <% end %>
         